<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_signup"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rajesh.organicfoods.AddDealer">
        android:background="@drawable/blue">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="630dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="150dp"
                android:layout_height="80dp"
                android:text="Dealer Signup"
                android:textAlignment="center"
                android:textColor="#DAA420"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignRight="@+id/login"
                android:layout_alignEnd="@+id/login"
                android:layout_marginRight="20dp"
                android:layout_marginEnd="20dp" />

            <android.support.design.widget.TextInputLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/usernameFloat"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="40dp"
                >

                <EditText
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:hint="Name"
                    android:id="@+id/Name"
                    />
 <!--
         /*       <EditText
                    android:id="@+id/editText"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:hint="Name" />
-->
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/DealerIDfloat"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:layout_below="@+id/usernameFloat"
                android:layout_alignLeft="@+id/usernameFloat"
                android:layout_alignStart="@+id/usernameFloat">
                <EditText
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:hint="DealerID"
                    android:id="@+id/DealI"
                    />


            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/Cpwdfloat"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/PasswordFloat"
                android:layout_alignLeft="@+id/PasswordFloat"
                android:layout_alignStart="@+id/PasswordFloat">

                <EditText
                    android:id="@+id/cpassword"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:hint="Confirm Password" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/PasswordFloat"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:layout_marginTop="230dp"
                android:layout_marginLeft="40dp"
                >

                <EditText
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:hint="Password"
                    android:id="@+id/password"/>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/emailfloat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="160dp">

                    <EditText
                        android:id="@+id/email"
                        android:layout_width="300dp"
                        android:layout_height="40dp"
                        android:hint="Email" />

                </android.support.design.widget.TextInputLayout>

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/MobileFloat"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:layout_above="@+id/Addressfloat"
                android:layout_alignLeft="@+id/Addressfloat"
                android:layout_alignStart="@+id/Addressfloat"
                android:layout_marginBottom="14dp">

                <EditText
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:hint="Mobile number"
                    android:id="@+id/mobile"/>

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/Addressfloat"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:layout_alignBottom="@+id/signup"
                android:layout_alignLeft="@+id/login"
                android:layout_alignStart="@+id/login"
                android:layout_marginBottom="30dp">

                <EditText
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:hint=" Address"
                    android:id="@+id/address"/>

            </android.support.design.widget.TextInputLayout>


            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="510dp"
                android:layout_marginLeft="90dp"
                android:text="Signup"
                android:textColor="#DAA420"
                android:id="@+id/signup"
                android:background="@drawable/transparent"
                />


            <Button
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_marginTop="550dp"
                android:layout_marginLeft="40dp"
                android:text="Already a User? Login"
                android:background="@android:color/transparent"
                android:textColor="#DAA420"
                android:id="@+id/login"
                />


        </RelativeLayout>




    </ScrollView>

