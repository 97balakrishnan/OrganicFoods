<?xml version="1.0" encoding="utf-8"?>
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_addDealer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rajesh.organicfoods.AddDealer">
        android:background="@drawable/blue">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="630dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:text="Dealer Signup"
                android:textAlignment="center"
                android:textColor="#DAA420"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_alignBottom="@+id/emailfloat" />

            <android.support.design.widget.TextInputLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/usernameFloat"
                android:layout_width="220dp"
                android:layout_height="60dp"

                android:layout_alignParentTop="true"

                android:layout_marginLeft="40dp"
                android:layout_marginTop="38dp">

                <EditText
                    android:id="@+id/Name"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:hint="Name" />
                <!--
                        /*       <EditText
                                   android:id="@+id/editText"
                                   android:layout_width="250dp"
                                   android:layout_height="40dp"
                                   android:layout_weight="1"
                                   android:hint="Name" />
               -->
            </android.support.design.widget.TextInputLayout>
            <android.support.design.widget.TextInputLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/DealerIDfloat"
                android:layout_width="220dp"
                android:layout_height="63dp"
                android:layout_marginTop="90dp"
                android:layout_marginLeft="40dp"
                >

                <EditText
                    android:id="@+id/DealerID"
                    android:layout_width="220dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="100dp"
                    android:hint="DealerID" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/Cpwdfloat"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_alignLeft="@+id/PasswordFloat"
                android:layout_alignStart="@+id/PasswordFloat">

                <EditText
                    android:id="@+id/cpassword"
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:hint="Confirm Password" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/PasswordFloat"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:layout_alignTop="@+id/password"
                android:layout_alignLeft="@+id/email"
                android:layout_alignStart="@+id/email">

            </android.support.design.widget.TextInputLayout>

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/emailfloat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="39dp"
                   >
                </android.support.design.widget.TextInputLayout>




            <android.support.design.widget.TextInputLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/MobileFloat"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:layout_alignTop="@+id/mobile"
                android:layout_alignLeft="@+id/mobile"
                android:layout_alignStart="@+id/mobile">

            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/Addressfloat"
                android:layout_width="220dp"
                android:layout_height="60dp"
                android:layout_marginBottom="30dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="350dp">



                <EditText
                    android:layout_width="250dp"
                    android:layout_height="40dp"
                    android:hint=" Address"
                    android:id="@+id/address"
                    />

            </android.support.design.widget.TextInputLayout>


            <Button
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_marginTop="510dp"
                android:layout_marginLeft="90dp"
                android:text="Signup"
                android:textColor="#DAA420"
                android:id="@+id/signup"
                android:background="@drawable/transparent"
                />


            <Button
                android:layout_width="200dp"
                android:layout_height="70dp"
                android:layout_marginTop="550dp"
                android:layout_marginLeft="40dp"
                android:text="Already a User? Login"
                android:background="@android:color/transparent"
                android:textColor="#DAA420"
                android:id="@+id/login"
                />

            <EditText
                android:id="@+id/email"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:hint="Email"
                android:layout_below="@+id/DealerIDfloat"
                android:layout_alignLeft="@+id/DealerIDfloat"
                android:layout_alignStart="@+id/DealerIDfloat" />



            <EditText
                android:id="@+id/password"
                android:layout_width="220dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:hint="Password"
                android:layout_marginTop="22dp"
                android:layout_below="@+id/email"


                android:layout_marginLeft="40dp" />

            <EditText
                android:id="@+id/mobile"
                android:layout_width="250dp"
                android:layout_height="40dp"
                android:layout_alignLeft="@+id/Addressfloat"
                android:layout_alignStart="@+id/Addressfloat"
                android:layout_alignTop="@+id/Addressfloat"
                android:layout_marginTop="74dp"
                android:hint="Mobile number" />


        </RelativeLayout>




    </ScrollView>

