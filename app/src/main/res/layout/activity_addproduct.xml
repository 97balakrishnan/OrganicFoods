<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_addproduct"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:background="@drawable/product"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rajesh.organicfoods.Addproduct">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:text="Product Details"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="40dp"
            android:textStyle="bold"
            android:textSize="20dp"
            android:textColor="#FFFFFF"/>

        <android.support.design.widget.TextInputLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/productidfloat"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="40dp"
            app:hintTextAppearance="@style/Cyantextinputlayout">

            <EditText
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:id="@+id/productid"
                android:hint="Product Id"
                android:textColor="#FFFFFF"
                />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/usernameFloat"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:layout_marginTop="170dp"
            android:layout_marginLeft="40dp"
            app:hintTextAppearance="@style/Cyantextinputlayout"
            >

            <EditText
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:id="@+id/Productname"
                android:hint="ProductName"
                android:textColor="#FFFFFF"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/ProductQuantityfloat"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:layout_marginTop="240dp"
            android:layout_marginLeft="40dp"
            app:hintTextAppearance="@style/Cyantextinputlayout"
            >

            <EditText
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:id="@+id/ProductQuantity"
                android:hint="Quantity available"
                android:textColor="#FFFFFF"
                />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/Pricefloat"
            android:layout_width="220dp"
            android:layout_height="60dp"
            android:layout_marginTop="310dp"
            app:hintTextAppearance="@style/Cyantextinputlayout"
            android:layout_marginLeft="40dp"
            >

            <EditText
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:id="@+id/Price"
                android:hint="Price"
                android:textColor="#FFFFFF"
                />

        </android.support.design.widget.TextInputLayout>


        <Button
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:text="Choose Image"
            android:id="@+id/chooseimage"
            android:layout_marginTop="400dp"
            android:layout_marginLeft="90dp"
            android:background="@drawable/transparent"
            android:textColor="#FFFFFF"/>

            <ImageView
                android:layout_width="225dp"
                android:layout_height="130dp"
                android:id="@+id/addphoto"
                android:hint="Add Image"
                android:layout_marginTop="450dp"
                android:layout_marginLeft="40dp"

                />

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Add"
            android:id="@+id/addproducts"
            android:layout_marginTop="600dp"
            android:layout_marginLeft="50dp"
            android:background="@drawable/transparent"
            android:textColor="#FFFFFF"
            />

        <Button
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:text="Cancel"
            android:id="@+id/Cancel"
            android:layout_marginTop="600dp"
            android:layout_marginLeft="190dp"
            android:background="@drawable/transparent"
            android:textColor="#FFFFFF"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="660dp"
            />
    </RelativeLayout>


</ScrollView>
