<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_signup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rajesh.organicfoods.Signup"
    android:background="@drawable/blue">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="630dp"
    android:orientation="vertical">




    <TextView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:text="Signup"
        android:textColor="#DAA420"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <android.support.design.widget.TextInputLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/usernameFloat"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_marginTop="90dp"
        android:layout_marginLeft="40dp"
        >

        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:hint="Name"
            android:id="@+id/Name"
            />

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/emailfloat"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="40dp"
        >

        <EditText
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:hint="Email"
            android:id="@+id/email"/>

    </android.support.design.widget.TextInputLayout>



    <android.support.design.widget.TextInputLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/Cpwdfloat"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_marginTop="300dp"
        android:layout_marginLeft="40dp"
        >

        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:hint="Confirm Password"
            android:id="@+id/cpassword"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/PasswordFloat"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_marginTop="230dp"
        android:layout_marginLeft="40dp"
        >

        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:hint="Password"
            android:id="@+id/password"/>

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/MobileFloat"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_marginTop="370dp"
        android:layout_marginLeft="40dp"
        >

        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:hint="Mobile number"
            android:id="@+id/mobile"/>

    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/Addressfloat"
        android:layout_width="220dp"
        android:layout_height="60dp"
        android:layout_marginTop="440dp"
        android:layout_marginLeft="40dp"
        >

        <EditText
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:hint=" Address"
            android:id="@+id/address"/>

    </android.support.design.widget.TextInputLayout>


    <Button
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginTop="510dp"
        android:layout_marginLeft="90dp"
        android:text="Signup"
        android:textColor="#DAA420"
        android:id="@+id/signup"
        android:background="@drawable/transparent"
        />


    <Button
        android:layout_width="200dp"
        android:layout_height="70dp"
        android:layout_marginTop="550dp"
        android:layout_marginLeft="40dp"
        android:text="Already a User? Login"
        android:background="@android:color/transparent"
        android:textColor="#DAA420"
        android:id="@+id/login"
        />


</RelativeLayout>




</ScrollView>
